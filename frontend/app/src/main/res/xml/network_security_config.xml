<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration: Allow cleartext traffic for all domains (development only) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Allow cleartext traffic for the specific backend IP addresses -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.163.250.54</domain>
        <domain includeSubdomains="true">10.44.110.54</domain>
        <domain includeSubdomains="true">10.89.111.54</domain>
        <domain includeSubdomains="true">10.67.184.54</domain>
    </domain-config>
    
    <!-- Also allow cleartext for localhost/emulator (XAMPP) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
</network-security-config>


